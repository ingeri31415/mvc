{% extends 'base.html.twig' %}

{% block title %}Ingrid's Library{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1> Welcome to the library</h1>

<a href="{{ path('library') }}">Back to start</a>
<a href="{{ path('show') }}">Back to books</a>

<ul>
    <table>
    <tr>
    <th>Ibsn</th>
    <th>Title</th>
    <th>Author</th>
    <th>Picture</th>
    </tr>
           
    <tr>
    <td>{{ books.ibsn }}</td>
    <td>{{ books.title }}</td>
    <td>{{ books.author }}</td>
    <td> <img src= "{{ asset( books.image ) }}" alt="Picture missing" width='200'></td>
    </tr>
        
    </table>
</ul>

{% endblock %}
