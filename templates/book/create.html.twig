{% extends "base.html.twig" %}

{% block title %}Add Book{% endblock %}

{% block body %}

<h1> Add book to library </h1>

<a href="{{ path('library') }}">Back to start</a>
<a href="{{ path('show') }}">Show all books</a>

<form method="post" action="{{ path('book_creater') }}">
    <ul>
        <div>
        <label for="title">Title:</label>
        <input type="text" name="title">
        </div>
        <div>
        <label for="author">Author:</label>
        <input type="text" name="author">
        </div>
        <div>
        <label for="image">Image:</label>
        <input type="text" name="image">
        </div>
        <div>
        <label for="ibsn">IBSN:</label>
        <input type="text" name="ibsn">
        </div>

        <input type="submit" name="skapa" value="skapa" ;">
    </ul>
</form>

   
{% endblock %}
