{% extends "base.html.twig" %}

{% block title %}Add Book{% endblock %}

{% block body %}

<h1> Add book to library </h1>

<a href="{{ path('library') }}">Back to start</a>
<a href="{{ path('show') }}">Back to books</a>

<form method="post" action="{{ path('updateer', {id: book.ibsn } )}}">
    <ul>
        <div>
        <label for="title">Title:</label>
        <input type="text" name="title" value='{{book.title}}'>
        </div>
        <div>
        <label for="author">Author:</label>
        <input type="text" name="author" value='{{book.author}}'>
        </div>
        <div>
        <label for="image">Image:</label>
        <input type="text" name="image" value='{{book.image}}'>
        </div>
        <div>
        <label for="ibsn">IBSN:</label>
        <input type="text" name="ibsn" readonly value='{{book.ibsn}}'>
        </div>

        <input type="submit" name="edit" value="Save changes" ;">
    </ul>
</form>

   
{% endblock %}
